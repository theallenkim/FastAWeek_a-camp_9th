<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FEFEFE"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/MainTop"
        style="@style/CustomImageButton"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/titlebar"
        android:visibility="visible" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="#FCFCFC"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/none_1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_column="0"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#474545"
            android:text="시간"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />

        <Button
            android:id="@+id/none_2"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_column="1"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#474545"
            android:text="오늘"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />

        <Button
            android:id="@+id/none_3"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#474545"
            android:text="내일"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />

        <Button
            android:id="@+id/none_4"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#474545"
            android:text="모레"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />

        <Button
            android:id="@+id/none_5"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_column="4"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#474545"
            android:text="글피"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />

        <Button
            android:id="@+id/none_6"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_column="5"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#474545"
            android:text="나흘"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />

        <Button
            android:id="@+id/none_7"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_column="6"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#474545"
            android:text="닷새"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />

        <Button
            android:id="@+id/none_8"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_column="7"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#474545"
            android:text="여섯새"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />
    </LinearLayout>
    
    <GridView
        android:id="@+id/gridView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp" 
        android:columnWidth="40dp"
        android:gravity="center"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="5dp"
        android:numColumns="8"
       
        android:background="#E0E0E0"
        >

    </GridView>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gridView"
        android:id="@+id/linearLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="음성등록"
            android:id="@+id/onVoiceRec"
            android:textSize="11dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="화면캡쳐"
            android:id="@+id/onScreenShot"
            android:textSize="11dp"
            android:layout_alignTop="@+id/getClipBoard"
            android:layout_toLeftOf="@+id/getClipBoard"
            android:layout_toStartOf="@+id/getClipBoard"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="사진찍기"
            android:id="@+id/onCameraShot"
            android:textSize="11dp"
            android:layout_alignTop="@+id/getClipBoard"
            android:layout_toLeftOf="@+id/getClipBoard"
            android:layout_weight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="클립보드"
            android:id="@+id/getClipBoard"
            android:textSize="11dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
